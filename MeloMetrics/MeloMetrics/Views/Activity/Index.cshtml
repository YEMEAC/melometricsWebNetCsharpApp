@model IEnumerable<MeloMetrics.Models.Activity>

@{
    ViewBag.Title = "Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id_activity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.id_user)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.timestamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_activity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_user)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.timestamp)
                    </td>
                    <td>
                        <a href="@Url.Action("Index", "ActivityRecord", new { item.id_activity})">@Html.DisplayFor(modelItem => item.nombre)</a>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    }
}
else
{


}